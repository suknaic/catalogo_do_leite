{
  "root": true,
  "ignorePatterns": [
    "projects/**/*",
    "server/**/*"
  ],
  "overrides": [
    {
      "files": [
        "*.ts"
      ],
      "parserOptions": {
        "project": [
          "tsconfig.json"
        ],
        "createDefaultProgram": true
      },
      "extends": [
        "prettier/@typescript-eslint",
        "plugin:prettier/recommended"
      ],
      "plugins": [
        "@typescript-eslint",
        "prettier",
        "import"
      ],
      "rules": {}
    },
    {
      "files": [
        "*.html"
      ],
      "rules": {}
    }
  ]
}
